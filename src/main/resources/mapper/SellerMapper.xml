<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sc.dao.SellerDao">
    <insert id="insert" parameterType="seller">
        insert into seller
        (user_id)
        values
        (#{user_id});
    </insert>

    <select id="findUserBySeller" parameterType="seller" resultType="user">
        select *
        from user
        where id = #{user_id}
    </select>

    <select id="findSellerBySellerId" parameterType="int" resultType="seller">
        select *
        from seller
        where seller_id = #{seller_id}
    </select>
</mapper>
